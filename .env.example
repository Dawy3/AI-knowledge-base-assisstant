# =============================================================================
# OPENAI
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key

# LLM Models (for query routing - simple queries use cheaper model)
LLM_TIER1_MODEL=gpt-3.5-turbo
LLM_TIER2_MODEL=gpt-4o-mini
LLM_TIER3_MODEL=gpt-4o

# Embedding Model
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Generation Parameters
# LLM_MAX_TOKENS=1024
# LLM_TEMPERATURE=0.7

# =============================================================================
# QDRANT (Vector Store)
# =============================================================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=                           # Optional, required for Qdrant Cloud
QDRANT_COLLECTION=documents

# =============================================================================
# POSTGRESQL (Relational Data)
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rag_db

# =============================================================================
# REDIS (Semantic Cache)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# RETRIEVAL PIPELINE
# =============================================================================
CHUNK_SIZE=512
CHUNK_OVERLAP=50
VECTOR_TOP_K=100
RERANK_TOP_K=10
RELEVANCE_THRESHOLD=0.6

# =============================================================================
# APPLICATION
# =============================================================================
APP_ENV=development
DEBUG=false
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000

# =============================================================================
# OBSERVABILITY (Optional)
# =============================================================================
# LANGSMITH_API_KEY=lsv2_pt_xxx
# LANGSMITH_PROJECT=my-rag-project
