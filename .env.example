# =========================
# LLM Configuration
# =========================
# OpenAI (for embeddings and generation)
OPENAI_API_KEY=sk-your-openai-api-key

# OpenRouter (alternative LLM provider)
OPENROUTER_API_KEY=sk-or-your-openrouter-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
LLM=gpt-4o-mini
ROUTING_MODEL=gpt-3.5-turbo

# Cohere (optional - for embeddings)
COHERE_API_KEY=your-cohere-api-key

# Voyage AI (optional - for code/specialized embeddings)
VOYAGE_API_KEY=your-voyage-api-key

# HuggingFace (optional - for local models)
HF_TOKEN=hf_your-huggingface-token

# =========================
# Vector Store Configuration
# =========================
# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=my-app-index
PINECONE_ENVIRONMENT=us-east-1

# Qdrant (alternative vector store)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key

# =========================
# Database Configuration
# =========================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=rag_db
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rag_db

# =========================
# Redis Cache
# =========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# =========================
# Application Settings
# =========================
APP_ENV=development
LOG_LEVEL=INFO
DEBUG=false

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =========================
# Observability / Tracing
# =========================
# LangSmith (for LLM tracing)
LANGSMITH_API_KEY=lsv2_pt_your-langsmith-key
LANGSMITH_PROJECT=my-rag-project
LANGCHAIN_TRACING_V2=true

# OpenTelemetry (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=rag-backend

# =========================
# Model Configuration
# =========================
# Embedding model
EMBEDDING_MODEL=openai/text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Reranker model
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# =========================
# RAG Pipeline Settings
# =========================
# Chunking
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Retrieval
VECTOR_TOP_K=100
BM25_TOP_K=100
RERANK_TOP_K=10

# Hybrid search weights
VECTOR_WEIGHT=5.0
BM25_WEIGHT=3.0
RECENCY_WEIGHT=0.2
